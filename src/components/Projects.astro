---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import ReactNative from "./icons/ReactNative.astro"
import AstroIcon from "./icons/AstroIcon.astro"
import Python from "./icons/Python.astro"
import Flask from "./icons/Flask.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import Sanity from "./icons/Sanity.astro"
import React from "./icons/React.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
    RN: {
    name: "React Native",
    class: "bg-[#61DBFB] text-black",
    icon: ReactNative,
  },
    ASTRO: {
    name: "Astro",
    class: "bg-[#FF5D01] text-white",
    icon: AstroIcon,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#3776AB] text-white",
    icon: Python,
  },
  FLASK: {
    name: "Flask",
    class: "bg-[#000000] text-white",
    icon: Flask,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#563D7C] text-white",
    icon: Bootstrap,
  },
  SANITY: {
    name: "Sanity",
    class: "bg-[#F03E2F] text-white",
    icon: Sanity
  },
  REACT: {
    name: "React",
    class: "bg-[#61DAFB] text-black",
    icon: React,
  },
}
const PROJECTS = [
  {
    title: "Me Asesoran Rentas",
    description:
      "Aplicación web real en producción que permite a usuarios gestionar y presentar su declaración de la renta en España. Desarrollo fullstack: integración con API de la Agencia Tributaria, validaciones, autenticación y panel para asesores. Diseño moderno y funcional.",
    link: "https://rentas.measesoran.eu",
    image: "/projects/rentasapp.png", // Asegúrate de tener la imagen en tu carpeta
    tags: [TAGS.RN, TAGS.NEXT, TAGS.TAILWIND],
  },
    {
    title: "Revista Victoria",
    description:
      "Pagina web de la revista Victoria, un proyecto personal y en producción que muestra artículos y noticias sobre diversos temas. Utiliza Astro como framework junto con React para un diseño moderno y responsivo. Incluye rutas dinámicas y buenas prácticas de desarrollo web. Usa Sanity como CMS para la gestión de contenido.",
    link: "https://www.victoriarevista.com/",
    image: "/projects/revistavictoria.png", // Asegúrate de tener la imagen en tu carpeta
    tags: [TAGS.ASTRO, TAGS.REACT, TAGS.SANITY],
  },
  {
    title: "AgentVuelosBot - Bot de telegram para la búsqueda de vuelos",
    description:
    "Sistema de alertas inteligentes para vuelos baratos. Desarrollé un sistema completo de monitorización y notificación de ofertas de vuelos, orientado a usuarios que buscan optimizar su presupuesto de viaje. El proyecto integra un backend en Python (FastAPI), un bot conversacional en Telegram y una base de datos PostgreSQL, permitiendo a los usuarios crear alertas personalizadas según origen, destino, fechas y precio objetivo.",
    link: "https://web.telegram.org/k/#@AgentVuelosBot",
    github: "https://github.com/Estivbi/bot-agenteviajes",
    image: "/projects/avatarbot.png", // Asegúrate de incluir esta imagen
    tags: [TAGS.PYTHON],
  },
  {
    title: "Torneo de Videojuegos",
    description:
      "Aplicación web desarrollada en Python con Flask para la gestión de un torneo de videojuegos. Permite a los usuarios registrarse, inscribirse en torneos y ver el estado de las partidas. Incluye un sistema de autenticación y una interfaz sencilla.",
    link: "https://torneo-videojuegos.onrender.com/",
    github: "https://github.com/Estivbi/torneo_videojuegos",
    image: "/projects/torneovideojuegos.png", 
    tags: [TAGS.PYTHON, TAGS.FLASK, TAGS.BOOTSTRAP],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



